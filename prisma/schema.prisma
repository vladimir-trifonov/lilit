generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(cuid())
  name        String
  path        String   // workspace directory path
  description String?
  stack       String?  // "nextjs" | "python" | "react" | etc.
  settings    String?  // JSON: agent models, budget limits, enabled agents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  conversations      Conversation[]
  agentRuns          AgentRun[]
  eventLogs          EventLog[]
  pipelineRuns       PipelineRun[]
  memories           Memory[]
  agentRelationships AgentRelationship[]

  @@index([createdAt])
}

model Conversation {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  @@index([projectId, updatedAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" | "assistant" | "system"
  content        String
  metadata       String?      // JSON - agent info, task refs, etc.
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model AgentRun {
  id            String       @id @default(cuid())
  projectId     String
  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pipelineRunId String?
  pipelineRun   PipelineRun? @relation(fields: [pipelineRunId], references: [id], onDelete: SetNull)
  agent         String       // "architect" | "pm" | "developer" | "qa"
  role          String?      // sub-role: "code" | "review" | "fix" | "devops" | "automation" | "manual"
  model         String
  input         String
  output        String?
  status        String       @default("running") // "running" | "completed" | "failed"
  durationMs    Int?
  tokensUsed    Int?
  costUsd       Float?
  createdAt     DateTime     @default(now())

  @@index([projectId, createdAt])
  @@index([agent, status])
  @@index([pipelineRunId])
}

model EventLog {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId    String?
  agent     String   // who produced this event
  role      String?  // sub-role if applicable
  type      String   // "plan_created" | "architecture_defined" | "code_written" | "review_done" | "tests_written" | "bug_found" | "fix_applied"
  data      String   // JSON payload
  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([taskId])
  @@index([type])
}

model PipelineRun {
  id             String   @id @default(cuid())
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  conversationId String
  runId          String   @unique
  userMessage    String
  status         String   @default("running") // running | awaiting_plan | completed | failed | aborted

  plan           String?  // JSON: PMPlan
  pipeline       String?  // JSON: string[] of pipeline steps
  currentStep    Int      @default(0)
  completedSteps String?  // JSON: StepResult[]
  lastOutput     String?
  fixCycle       Int      @default(0)
  runningCost    Float    @default(0)
  error          String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  agentRuns      AgentRun[]

  @@index([projectId, status])
  @@index([runId])
}

model Memory {
  id           String   @id @default(cuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  agent        String?
  role         String?
  type         String   // "code_pattern" | "decision" | "personality"
  title        String
  content      String
  // embedding vector(768) â€” managed via raw SQL, not in Prisma model
  sourceType   String   // "event_log" | "agent_run" | "manual" | "file_index"
  sourceId     String?
  significance Float    @default(0.5)
  metadata     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([projectId, type])
  @@index([projectId, agent])
  @@index([sourceType, sourceId])
}

model AgentRelationship {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fromAgent String
  toAgent   String
  trust     Float    @default(0.5)
  tension   Float    @default(0.0)
  rapport   Float    @default(0.5)
  lastNote  String?
  updatedAt DateTime @updatedAt

  @@unique([projectId, fromAgent, toAgent])
  @@index([projectId])
}
