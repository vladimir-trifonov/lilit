generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String    @id @default(cuid())
  name        String
  path        String    // workspace directory path
  description String?
  stack       String?   // "nextjs" | "python" | "react" | etc.
  settings    String?   // JSON: agent models, budget limits, enabled agents
  deletedAt   DateTime? // null = active, set = soft-deleted
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  conversations      Conversation[]
  agentRuns          AgentRun[]
  eventLogs          EventLog[]
  pipelineRuns       PipelineRun[]
  tasks              Task[]
  memories           Memory[]
  agentRelationships AgentRelationship[]

  @@index([createdAt])
}

model Conversation {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  @@index([projectId, updatedAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" | "assistant" | "system"
  content        String
  metadata       String?      // JSON - agent info, task refs, etc.
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model AgentRun {
  id            String       @id @default(cuid())
  projectId     String
  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pipelineRunId String?
  pipelineRun   PipelineRun? @relation(fields: [pipelineRunId], references: [id], onDelete: SetNull)
  agent         String       // "architect" | "pm" | "developer" | "qa"
  role          String?      // sub-role: "code" | "review" | "fix" | "devops" | "automation" | "manual"
  model         String
  input         String
  output        String?
  status        String       @default("running") // "running" | "completed" | "failed"
  durationMs    Int?
  tokensUsed    Int?
  costUsd       Float?
  createdAt     DateTime     @default(now())

  @@index([projectId, createdAt])
  @@index([agent, status])
  @@index([pipelineRunId])
}

model EventLog {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId    String?
  agent     String   // who produced this event
  role      String?  // sub-role if applicable
  type      String   // "plan_created" | "architecture_defined" | "code_written" | "review_done" | "tests_written" | "bug_found" | "fix_applied"
  data      String   // JSON payload
  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([taskId])
  @@index([type])
}

model PipelineRun {
  id             String   @id @default(cuid())
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  conversationId String
  runId          String   @unique
  userMessage    String
  status         String   @default("running") // running | awaiting_plan | completed | failed | aborted

  plan           String?  // JSON: PMPlan
  pipeline       String?  // JSON: string[] of pipeline steps
  currentStep    Int      @default(0)
  completedSteps String?  // JSON: StepResult[]
  lastOutput     String?
  fixCycle       Int      @default(0)
  runningCost    Float    @default(0)
  error          String?

  // Persisted log content (stored on pipeline completion for historical viewing)
  logContent     String?

  // Dynamic orchestration fields
  taskGraph      String?  // JSON: TaskGraph
  decisionCount  Int      @default(0)

  // Worker liveness — updated every WORKER_HEARTBEAT_INTERVAL_MS by the worker process
  heartbeatAt    DateTime?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  agentRuns           AgentRun[]
  tasks               Task[]
  standupMessages     StandupMessage[]
  agentMessages       AgentMessage[]
  debateRounds        DebateRound[]
  userMessages        UserPipelineMessage[]
  pmDecisionLogs      PMDecisionLog[]

  @@index([projectId, status])
  @@index([runId])
}

model StandupMessage {
  id             String      @id @default(cuid())
  pipelineRunId  String
  pipelineRun    PipelineRun @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  fromAgent      String      // "pm" | "architect" | "developer" | "qa"
  fromRole       String?
  toAgent        String      // recipient agent type or "none"
  insightType    String      // "cross-concern" | "pattern" | "process" | "drift" | "risk" | "none"
  message        String
  actionable     Boolean     @default(false)
  feedback       String?     // "useful" | "not_useful" — user quality rating
  model          String
  costUsd        Float?
  tokensUsed     Int?
  createdAt      DateTime    @default(now())

  @@index([pipelineRunId])
  @@index([insightType])
  @@index([fromAgent])
}

model AgentMessage {
  id             String         @id @default(cuid())
  pipelineRunId  String
  pipelineRun    PipelineRun    @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  fromAgent      String         // sender agent type
  fromRole       String?
  toAgent        String         // recipient agent type
  messageType    String         // "question" | "flag" | "suggestion" | "handoff" | "response"
  content        String
  phase          Int            // pipeline step index when message was sent
  parentId       String?        // reply-to message ID (threaded conversations)
  parent         AgentMessage?  @relation("MessageThread", fields: [parentId], references: [id])
  replies        AgentMessage[] @relation("MessageThread")
  debateId       String?        // groups turns of the same debate
  debateRole     String?        // "challenger" | "defender" | "moderator"
  createdAt      DateTime       @default(now())

  @@index([pipelineRunId, toAgent])
  @@index([parentId])
  @@index([debateId])
}

model DebateRound {
  id              String      @id @default(cuid())
  pipelineRunId   String
  pipelineRun     PipelineRun @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  challengerAgent String
  defenderAgent   String
  triggerOpinion  String
  conflictSnippet String
  outcome         String      // "accepted" | "revised" | "compromise" | "escalated"
  turnCount       Int
  resolutionNote  String?
  costUsd         Float       @default(0)
  stepIndex       Int
  createdAt       DateTime    @default(now())

  @@index([pipelineRunId])
}

model Task {
  id              String        @id @default(cuid())
  projectId       String
  project         Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pipelineRunId   String?
  pipelineRun     PipelineRun?  @relation(fields: [pipelineRunId], references: [id], onDelete: SetNull)
  parentId        String?
  parent          Task?         @relation("SubTasks", fields: [parentId], references: [id])
  children        Task[]        @relation("SubTasks")

  // Content
  title           String
  description     String
  acceptanceCriteria String[]
  skills          String[]

  // Assignment
  assignedAgent   String?
  assignedRole    String?
  provider        String?
  model           String?

  // Lifecycle: created -> assigned -> in_progress -> done | failed | blocked | cancelled | skipped
  status          String        @default("created")
  sequenceOrder   Int           @default(0)

  // Dynamic orchestration fields
  graphId         String?       // "t1", "t2" etc.
  dependsOn       String[]      // graph IDs this depends on
  attempts        Int           @default(0)
  maxAttempts     Int           @default(3)
  sessionId       String?       // Claude CLI session ID for resuming conversations

  // Output
  output          String?
  outputSummary   String?
  costUsd         Float         @default(0)

  // Timestamps
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  notes           TaskNote[]

  @@index([projectId, status])
  @@index([pipelineRunId])
  @@index([assignedAgent])
}

model TaskNote {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author    String   // agent type or "user" or "system"
  content   String
  createdAt DateTime @default(now())

  @@index([taskId])
}

model Memory {
  id           String   @id @default(cuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  agent        String?
  role         String?
  type         String   // "code_pattern" | "decision" | "personality"
  title        String
  content      String
  // embedding vector(768) — managed via raw SQL, not in Prisma model
  sourceType   String   // "event_log" | "agent_run" | "manual" | "file_index"
  sourceId     String?
  significance Float    @default(0.5)
  metadata     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([projectId, type])
  @@index([projectId, agent])
  @@index([sourceType, sourceId])
}

model AgentRelationship {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fromAgent String
  toAgent   String
  trust     Float    @default(0.5)
  tension   Float    @default(0.0)
  rapport   Float    @default(0.5)
  lastNote  String?
  updatedAt DateTime @updatedAt

  @@unique([projectId, fromAgent, toAgent])
  @@index([projectId])
}

model UserPipelineMessage {
  id             String      @id @default(cuid())
  pipelineRunId  String
  pipelineRun    PipelineRun @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  content        String
  processed      Boolean     @default(false)
  createdAt      DateTime    @default(now())

  @@index([pipelineRunId, processed])
}

model PMDecisionLog {
  id             String      @id @default(cuid())
  pipelineRunId  String
  pipelineRun    PipelineRun @relation(fields: [pipelineRunId], references: [id], onDelete: Cascade)
  triggerType    String
  triggerData    String      // JSON
  decision       String      // JSON: PMDecision
  costUsd        Float       @default(0)
  createdAt      DateTime    @default(now())

  @@index([pipelineRunId])
}

model OAuthAccount {
  id               String    @id @default(cuid())
  provider         String    // "antigravity"
  email            String
  accessToken      String
  refreshToken     String
  expiresAt        DateTime
  source           String    // "browser" | "opencode"
  disabled         Boolean   @default(false)
  rateLimitedUntil DateTime?
  lastUsedAt       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@unique([provider, email])
  @@index([provider, disabled])
}
