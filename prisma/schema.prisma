generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(cuid())
  name        String
  path        String   // workspace directory path
  description String?
  stack       String?  // "nextjs" | "python" | "react" | etc.
  settings    String?  // JSON: agent models, budget limits, enabled agents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  conversations Conversation[]
  tasks         Task[]
  agentRuns     AgentRun[]
  eventLogs     EventLog[]

  @@index([createdAt])
}

model Conversation {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  @@index([projectId, updatedAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" | "assistant" | "system"
  content        String
  metadata       String?      // JSON - agent info, task refs, etc.
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model Task {
  id          String    @id @default(cuid())
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      String    @default("pending") // "pending" | "in_progress" | "review" | "done" | "failed"
  assignedTo  String?   // "pm" | "developer" | "qa" | "designer"
  parentId    String?   // for subtask hierarchy
  order       Int       @default(0)
  result      String?   // outcome/summary from agent
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  agentRuns AgentRun[]

  @@index([projectId, status])
  @@index([parentId])
}

model AgentRun {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)
  agent     String   // "architect" | "pm" | "developer" | "qa"
  role      String?  // sub-role: "code" | "review" | "fix" | "devops" | "automation" | "manual"
  model     String
  input     String
  output    String?
  status    String   @default("running") // "running" | "completed" | "failed"
  durationMs Int?
  tokensUsed Int?
  costUsd    Float?
  createdAt  DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([taskId])
  @@index([agent, status])
}

model EventLog {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId    String?
  agent     String   // who produced this event
  role      String?  // sub-role if applicable
  type      String   // "plan_created" | "architecture_defined" | "code_written" | "review_done" | "tests_written" | "bug_found" | "fix_applied"
  data      String   // JSON payload
  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([taskId])
  @@index([type])
}
